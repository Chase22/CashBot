<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="cashbot" transaction-type="RESOURCE_LOCAL">
    <class>org.chase.telegram.cashbot.data.Account</class>
    <class>org.chase.telegram.cashbot.data.CashChat</class>
    <class>org.chase.telegram.cashbot.data.CashUser</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.url"    value="jdbc:mysql://localhost:3306/cashbot?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />
      <property name="javax.persistence.jdbc.user" value="telegram" />
      <property name="javax.persistence.jdbc.password" value="telegram" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="" />
      <property name="hibernate.format_sql" value="false"/>
      <property name="show_sql" value="false"/>
      <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
      
    </properties>
  </persistence-unit>
</persistence>